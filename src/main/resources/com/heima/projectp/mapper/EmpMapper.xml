<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.heima.projectp.mapper.EmpMapper">

    <!--新增-->
    <insert id="EmpInsert">
        insert into db1.emp(id, username, password, name, gender, image, job, entry_date, depId, create_time,
        update_time)
        values (
        null, #{username}, #{password}, #{name}, #{gender}, #{image}, #{job}, #{entry_date}, #{depId}, NOW(), NOW()
        )
    </insert>


    <!--依照ID删除员工-->
    <delete id="EmpDeleteById">
        <if test="ids != null and ids != ''">
            delete from emp where id in
            <foreach collection="ids" item="id" separator="," open="(" close=")">
                #{id}
            </foreach>
        </if>
    </delete>


    <!--依照ID修改員工-->
    <update id="EmpUpdateById">
        update emp
        <set>
            username = #{username} ,
            password = #{password},
            name = #{name},
            gender = #{gender},
            image = #{image},
            job = #{job}
        </set>
        where id = #{id};
    </update>

    <!--&lt;!&ndash;頁數查詢&ndash;&gt;-->
    <!--    <select id="EmpPage" resultType="com.heima.projectp.pojo.Emp">-->
    <!--        select * from emp limit #{page},#{team};-->
    <!--    </select>-->
    <!--&lt;!&ndash;返回總筆數&ndash;&gt;-->
    <!--    <select id="EmpMax" resultType="java.lang.Integer">-->
    <!--        select count(*) from emp;-->
    <!--    </select>-->
    <!--依照頁數查詢員工-->


    <!--查詢所有-->
    <select id="EmpSelectAll" resultType="com.heima.projectp.pojo.Emp">
        select * from emp;
    </select>


    <select id="EmpSelectAll2" resultType="com.heima.projectp.pojo.Emp">
        select * from emp
        <where>
            <if test="name != null and name !=''">
                name like concat('%',#{name},'%')
            </if>
            <if test="create_time != null and create_time !=''">
                and create_time = #{create_time})
            </if>
        </where>
    </select>


    <!--依照ID查詢員工-->
    <select id="EmpSelectById">
        select * from emp where id = #{id};

    </select>
</mapper>
